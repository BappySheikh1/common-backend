app.get('/comment/:id', async (req, res) => {
    const productId = req.params.id;

    const result = await productCollection.findOne(
      { _id: ObjectId(productId) },
      { projection: { _id: 0, comments: 1 } }
    );

    if (result) {
      res.json(result);
    } else {
      res.status(404).json({ error: 'Product not found' });
    }
  });
